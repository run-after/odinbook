<div class="user-list col-md-10 mx-auto">
  <h4 class="text-center p-2">Friend Requests</h4>

  <% if @requests.empty? %>
    Nothing here...
  <% else %>
    <ul class="d-md-inline-flex flex-wrap flex-row">
    
      <% @requests.each do |request| %>
        
          <li class="user p-2 mx-1 d-flex align-items-center my-1 rounded"> 
            <% if User.find(request.requester_id).avatar.attached? %>
              <%= image_tag User.find(request.requester_id).avatar, class: "avatar-image mr-2"%>
            <% else %>
              <div class="blank-user avatar-image d-inline-flex justify-content-center align-items-center mr-2">
                <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                </svg>
              </div>
            <% end %>
            <%= link_to User.find(request.requester_id).username, user_path(request.requester_id), class: "mr-2" %> 
            <%= link_to "Accept request", friendships_path(friend_id: request.requester_id), method: :post, class: "ml-4 btn btn-secondary p-1 my-2 ml-auto" %>
          </li>
      
      <% end %>
    </ul>
  <% end %>
  </div>