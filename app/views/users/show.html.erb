----------------------------------------------<br>
<%= @user.username %>'s wall<br>
---------------------------------------------<br>
<% if @user.avatar.attachment %>
    <%= image_tag @user.avatar.variant(resize:"400x400") %><br>
<% else %>
  <% if @user.uid %>
    <%= image_tag "#{@user.username.split(' ').join}.png" %><br>
  <% else %>
    <% if current_user.id == @user.id %>
      <%= link_to "Add image", edit_user_registration_path %><br>
    <% end %>
  <% end %>
<% end %>
Friends:<br>
<% @user.friends.each do |friend| %> 
  <%= friend.username %><br>
<% end %>
<%# display user posts %>
<h3>Posts</h3>
<% if @posts.any? %>
  <% @posts.each do |post| %>
  =============================<br>
    <strong><%= post.user.username %> posts:</strong> <%= post.content %>
    <!--Like button-->
    <br>
    <%= render 'layouts/like_button', post: post %>
    Likes: <%= post.likes.count %>
    <%# display comments on user post %>
    <% if post.comments.any? %>
      <h4>Comments:</h4>
        <% post.comments.each do |comment| %>
        ---------------------------<br>
          <strong><%= link_to comment.user.username, user_path(comment.user) %> comments:</strong> <%= comment.content %><br>
          ---------------------------<br>
        <% end %>
    <% end %>
    <%= form_with model: @comment do |f| %>
      <%= f.hidden_field :post_id, value: post.id %>
      <%= f.label :content, "Your comment" %><br>
      <%= f.text_area :content %><br>

      <%= f.submit "Comment" %><br>
    <% end %>
    <br>=============================<br>
  <% end %>
<% else %>
  Nothing here!
<% end %>


