<div class=" blank-user d-flex flex-column">
  <% if @image %>
    <%= image_tag @image, class: "col-6 mx-auto mt-2" %>
  <% else %>
    <div class="d-flex justify-content-center align-items-center">
      <svg width="10em" height="10em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
      </svg>
    </div>
  <% end %>
  <h1 class="d-flex justify-content-center">
    <%= @user.username %>
  </h1>
  <% if current_user == @user %>
    <div class="d-flex justify-content-center">
      <%= render 'avatar_upload' %>
    </div>
  <% end %>
</div>



<div class="user-show mt-1">
  <div class="friends float-md-left pb-4 col-lg-2 text-center">
    <h1>Friends:</h1>
    <% if @user.friends.any? %>
      <% @user.friends.each do |friend| %>
        <div class="friend d-flex align-items-center mb-1"> 
          <% if friend.avatar.attached? %>
            <%= image_tag friend.avatar, class: "avatar-image mr-2" %>
          <% else %>
            <div class="blank-user avatar-image d-inline-flex justify-content-center align-items-center">
              <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
              </svg>
            </div>
          <% end %>
          <%=link_to friend.username, user_path(friend), class: "d-inline" %>
        </div>
      <% end %>
    <% else %>
      <%= link_to "Find some!", users_path %>
    <% end %>
  </div>
  <div class="ml-auto col-md-10 pr-0">
    <%= render 'layouts/post_feed' %>
  </div>
</div>