<% if post.comments.any? %>
  <% post.comments.each do |comment| %>

      <div class="collapse" id="collapse<%=post.id%>">
        <div class="card card-body d-flex flex-row align-items-start comments p-0">
          <% if comment.user.avatar.attached? %>
            <%= image_tag comment.user.avatar, class: "avatar-image mx-2" %>
          <% else %>
            <div class="blank-user avatar-image d-inline-flex justify-content-center align-items-center mx-2">
              <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
              </svg>
            </div>
          <% end %>
          <div class="comment col-md-auto my-1 mr-2">
            <%= link_to comment.user.username, user_path(comment.user) %>
            <p>
              <%= comment.content %>
            </p>
          </div>
        </div>
      </div>






    
  <% end %>
<% end %>
